{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/mailer/src",
  "monorepo": true,
  "root": "apps/mailer",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/mailer/tsconfig.app.json",
    "assets": [
      {
        "include": "**/*.hbs",
        "outDir": "dist/apps/mailer",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  },
  "projects": {
    "authentication": {
      "type": "application",
      "root": "apps/authentication",
      "entryFile": "main",
      "sourceRoot": "apps/authentication/src",
      "compilerOptions": {
        "tsConfigPath": "apps/authentication/tsconfig.app.json"
      }
    },
    "mailer": {
      "type": "application",
      "root": "apps/mailer",
      "entryFile": "main",
      "sourceRoot": "apps/mailer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mailer/tsconfig.app.json",
        "assets": [
          "apps/mailer/**/*.hbs"
        ]
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}